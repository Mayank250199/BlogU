<div class="container">
    <div class="row">
        <div style="margin: 100px auto;">
        <div class="ui main text container segment" style="background:;">
        <h1 style="text-align: center"><i class="user circle icon"></i> Sign Up!</h1>
          <div class="well" style="width: 100%; margin: 5px auto;">
            <form action="/blogs/signup" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="username" placeholder="username">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="fullname" placeholder="fullname">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="email" placeholder="email">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="mobile" placeholder="mobile">
                </div>

                <div class="form-group">
                    <input class="form-control" type="password" name="password" placeholder="password">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Sign Up!</button>
                </div>
            </form>
            <a href="blogs/login">Login!</a>
        </div>
    </div>
</div>
</div>
</div>


